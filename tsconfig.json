{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react-jsx",
        "outDir": "./dist/esm",
        "declaration": true,
        "importHelpers": true,
        "sourceMap": true
        // "rootDir": "src"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "./src/__tests__",
        "./src/reportWebVitals.js",
        "./src/setupTests.js"
    ]
}
